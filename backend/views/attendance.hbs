<div class='container mx-auto flex items-center justify-end min-h-screen'>
  <div class='absolute top-0 left-0 w-screen h-screen'>
    <figure class='w-full h-full'>
      <img src='/images/bg.jpg' alt='Điểm danh' class='object-cover w-full h-full' />
    </figure>
  </div>
  <div class='w-full lg:w-1/2 xl:w-1/3 px-4'>
    <div class='card lg:card-side bg-base-100 shadow-xl max-w-4xl w-full h-full'>
      <div class='card-body lg:w-1/2'>
        {{#if error}}
          <h2 class='card-title text-2xl font-bold mb-6'>Chú ý</h2>
          <p>{{error}}</p>
        {{else}}
          <h2 class='card-title text-2xl font-bold mb-6'>Thông tin khách mời</h2>
          <img src='{{guestImageURL}}' />

          <table class='table-auto'>
            <tbody>
              <tr>
                <td>Họ và tên</td>
                <td>{{guestName}}</td>
              </tr>
              <tr>
                <td>Số CCCD</td>
                <td>{{guestID}}</td>
              </tr>
              <tr>
                <td>Chức vụ</td>
                <td>{{guestOffice}}</td>
              </tr>
              <tr>
                <td>Đơn vị</td>
                <td>{{guestWorkplace}}</td>
              </tr>
              <tr>
                <td>Số điện thoại</td>
                <td>{{guestPhoneNumber}}</td>
              </tr>
              <tr>
                <td>Email</td>
                <td>{{guestEmail}}</td>
              </tr>
            </tbody>
          </table>

          {{#if isCheckedIn}}
            <p>Khách mời
              <b>{{guestName}}</b>
              (Số CCCD: {{guestID}}) đã được xác nhận tham gia hội nghị
              <b>{{meetingName}}</b>
              vào lúc
              <b>{{attendTime}}</b></p>
          {{else}}
            <a href="/dd/confirm/{{code}}" class="btn btn-primary mt-8">Xác nhận tham dự</a>
            <a href="/" class="btn btn-default">Thông tin không đúng</a>
          {{/if}}
        {{/if}}
      </div>
    </div>
  </div>
</div>