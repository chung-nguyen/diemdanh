{{#if error}}
  <div role='alert' class='alert alert-error'>
    <svg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' class='stroke-info h-6 w-6 shrink-0'>
      <path
        stroke-linecap='round'
        stroke-linejoin='round'
        stroke-width='2'
        d='M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z'
      ></path>
    </svg>
    <span>{{error}}</span>
  </div>
{{/if}}

<div class='container mx-auto flex items-center justify-end min-h-screen'>
  <div class='absolute top-0 left-0 w-screen h-screen'>
    <figure class='w-full h-full'>
      <img
        src='/images/bg.jpg'
        alt='Điểm danh'
        class='object-cover w-full h-full'
      />
    </figure>
  </div>
  <div class='w-full lg:w-1/2 xl:w-1/3 px-4'>
    <div class='card lg:card-side bg-base-100 shadow-xl max-w-4xl w-full h-full'>
      <div class='card-body lg:w-1/2'>
        <h2 class='card-title text-2xl font-bold mb-6'>Đăng nhập</h2>
        <form method='POST' action='/dd/login/{{code}}'>
          <div class='form-control'>
            <label class='label'>
              <span class='label-text'>Tên</span>
            </label>
            <label class='input input-bordered flex items-center gap-2'>
              <svg
                xmlns='http://www.w3.org/2000/svg'
                viewBox='0 0 16 16'
                fill='currentColor'
                class='w-4 h-4 opacity-70'
              ><path
                  d='M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z'
                /><path
                  d='M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z'
                /></svg>
              <input type='text' name='username' class='grow' placeholder='Tên đăng nhập' />
            </label>
          </div>
          <div class='form-control mt-4'>
            <label class='label'>
              <span class='label-text'>Mật khẩu</span>
            </label>
            <label class='input input-bordered flex items-center gap-2'>
              <svg
                xmlns='http://www.w3.org/2000/svg'
                viewBox='0 0 16 16'
                fill='currentColor'
                class='w-4 h-4 opacity-70'
              ><path
                  fill-rule='evenodd'
                  d='M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z'
                  clip-rule='evenodd'
                /></svg>
              <input type='password' name='password' class='grow' placeholder='Nhập mật khẩu' />
            </label>
            {{! <label class='label'>
              <a href='#' class='label-text-alt link link-hover'>Forgot password?</a>
            </label> }}
          </div>
          <div class='form-control mt-6'>
            <button type='submit' class='btn btn-primary'>Đăng nhập</button>
          </div>
        </form>
        {{! <div class='divider'>OR</div>
        <div class='text-center'>
          <p>Don't have an account?</p>
          <a href='#' class='link link-primary'>Sign up now</a>
        </div> }}
      </div>
    </div>
  </div>
</div>